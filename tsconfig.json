{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "lib",
    "baseUrl": ".",
    "esModuleInterop": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "verbatimModuleSyntax": true,
    "types": [],
    "noImplicitOverride": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
